/* pages/order/order.wxss */
.page {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #F7F4F8;
  background-image: linear-gradient(90deg, #FCFCFC 0%, #FCFCFC 99%);
  /* padding-top: 16px; */
}

/*底部  */

.bottom_box {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 0px;
  z-index: 100;
  background-color: #fff;
}
.all_money {
  position: absolute;
  width: 50%;
  height: 80rpx;
  top: 0;
  left: 25%;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}

.choose_ok {
  position: absolute;
  width: 25%;
  height: 80rpx;
  top: 0;
  right: 0;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
}

.color-block{
  color: #fff;
  font-size: 35rpx;
  background: #FB4C22;
}
